<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.6.2/dist/full.css" rel="stylesheet" type="text/css" />
</head>
<body class="flex dark:bg-gray-700">
    <!-- Sidebar -->
    <div class="flex flex-col w-64 bg-grey-100 dark:bg-gray-800 shadow-md">
        <ul class="pt-10">
            <li class="px-2 py-1"><a href="/Home/Index" class="block pl-3 pr-2 py-2 text-gray-500 rounded-lg hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 text-1.5xl font-semibold">Dashboard</a></li>
            <li class="px-2 py-1"><a href="/Record/Timetable" class="block pl-3 pr-2 py-2 text-gray-500 rounded-lg hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 text-1.5xl font-semibold">Time Table</a></li>
            <li class="px-2 py-1"><a href="/Record/Assessments" class="block pl-3 pr-2 py-2 text-gray-500 rounded-lg hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 text-1.5xl font-semibold">Assessments</a></li>
            <li class="px-2 py-1"><a href="/Home/Privacy" class="block pl-3 pr-2 py-2 text-gray-500 rounded-lg hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 text-1.5xl font-semibold">Privacy</a></li>
        </ul>
    </div>

    <div class="flex-1 p-6">
        <button data-drawer-target="default-sidebar" data-drawer-toggle="default-sidebar" aria-controls="default-sidebar" type="button" class="inline-flex items-center p-2 mt-2 ml-3 text-sm">
        </button>

        <div>
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>